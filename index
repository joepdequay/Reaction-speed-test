<script>
var box = document.getElementById("box");
var msg = document.getElementById("msg");
var btnStart = document.getElementById("btn-start");
var btnReset = document.getElementById("btn-reset");
var best = document.getElementById("best");
var avg = document.getElementById("avg");

var playing = false;
var startTime = 0;
var times = [];
var timeout = null;

btnStart.onclick = function() { startGame(); };
btnReset.onclick = function() { resetGame(); };

box.onclick = function() {
    if (playing) clickBox();
};

function startGame() {
    playing = false;
    box.style.display = "none";
    msg.textContent = "Wait for it...";
    btnStart.disabled = true;

    var delay = Math.random() * 3000 + 1500;

    timeout = setTimeout(function() {
        box.style.display = "flex";
        msg.textContent = "GO! CLICK NOW!";
        playing = true;
        startTime = Date.now();
    }, delay);
}

function clickBox() {
    var time = Date.now() - startTime;
    times.push(time);
    playing = false;
    box.style.display = "none";
    msg.textContent = "Great! " + time + "ms";
    updateStats();
    btnStart.disabled = false;
}

function updateStats() {
    var bestTime = Math.min.apply(Math, times);
    var sum = times.reduce((a,b)=>a+b,0);
    var avgTime = Math.round(sum / times.length);

    best.textContent = bestTime + "ms";
    avg.textContent = avgTime + "ms";
}

function resetGame() {
    clearTimeout(timeout);
    playing = false;
    times = [];
    box.style.display = "none";
    msg.textContent = "Press START to begin";
    best.textContent = "-";
    avg.textContent = "-";
    btnStart.disabled = false;
}
</script>

